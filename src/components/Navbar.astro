---
import LogoIPB from '../assets/img/Logo IPB.svg';
import Search from '../assets/icons/search.svg';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav class="navbar navbar-expand-lg bg-white sticky-top">
  <div class="container-lg">
    <a class="navbar-brand" href="/"><img src={LogoIPB} alt="Logo IPB"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-center">
        <li class="nav-item ms-3">
          <a class={`nav-link ${currentPath === "" ? "active fw-bold" : ""}`} aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item ms-3">
          <a class={`nav-link ${currentPath === "akademik" ? "active fw-bold" : ""}`} href="/akademik">Akademik</a>
        </li>
        <li class="nav-item ms-3">
          <a class={`nav-link ${currentPath === "blogs" ? "active fw-bold" : ""}`} href="/blogs">Blogs</a>
        </li>
        <li class="nav-item ms-3">
          <a class={`nav-link ${currentPath === "about" ? "active fw-bold" : ""}`} href="/about">About</a>
        </li>
      </ul>
      <form class="text-end" role="search">
        <button class="btn btn-primary rounded-pill" disabled>
            <img src={Search} alt="🔍">
            Search
        </button>
      </form>
    </div>
  </div>
</nav>

<script>
  import '../../node_modules/bootstrap/js/src/collapse';
</script>