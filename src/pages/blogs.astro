---
import Layout from "../layouts/Layout.astro";
const allBlogs = await Astro.glob('./blogs/*.md');
---

<Layout title='Blogs'>
  <main class="container py-3">
    <h1 class="fw-bold">Blogs <span class="badge bg-secondary">New</span></h1>
    <p>Blog dari civitas PKU IPB</p>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {allBlogs.map((blog) => (
      <div class="col">
        <div class="card text-bg-primary">
          <div class="card-header">{blog.frontmatter.category}</div>
          <div class="card-body">
            <img
              src={blog.frontmatter.thumbnail}
              alt="" 
              style="height: 150px !important;" 
              class="img-thumbnail rounded mb-3 object-fit-cover w-100"
            />
            <h5 class="card-title fw-bold">{blog.frontmatter.title}</h5>
            <p class="card-text"></p>
            <a href={blog.url} class="stretched-link"></a>
          </div>
        </div>
      </div>
    ))}
    </div>
  </main>
</Layout>